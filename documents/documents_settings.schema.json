{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Documents Feature Settings",
  "type": "object",
  "properties": {
    "document_types": {
      "type": "object",
      "additionalProperties": {
        "type": "object",
        "properties": {
          "requires_review": { "type": "boolean" },
          "requires_approval": { "type": "boolean" },
          "allow_self_approval": { "type": "boolean" },
          "required_signatures": {
            "type": "array",
            "items": { "type": "string" }
          }
        },
        "required": [
          "requires_review",
          "requires_approval",
          "allow_self_approval",
          "required_signatures"
        ]
      }
    }
  },
  "required": ["document_types"]
}
